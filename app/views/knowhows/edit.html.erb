<% if logged_in? %>
<p>Myノウハウ編集ページ</p>
<div class = "row">
    <% if current_user == @knowhow.pocket.user %>
    <aside class = "col-sm-4">
        <%= form_with(model: @knowhow, local: true) do |f| %>
        <p>タイトル</p>
        <div class = "form-group">
            <%= f.text_area :title, class: "form-control", rows: 5 %>
        </div>
        
        <p>内容</p>
        <div class = "form-group">
            <%= f.text_area :content, class: "form-control", rows: 5 %>
        </div>
        <%= f.submit "編集OK", class: "btn btn-primary btn-block" %>
        <% end %>
    </aside>
    <% end %>
</div>
<% end %>