<ul class = "list-unstyled">
    <p>投稿されたノウハウたち</p>
    <br>
        <%= form_tag(posted_knowhows_pocket_path, :method => "get") do %>
        <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "検索", :title => nil %>
        </p>
        <% end %>
        <br>
        <% if @search_knowhows %>
            <% @search_knowhows.each do |knowhow| %>
            <li class = "media mb-3">
                     <%= image_tag knowhow.pocket.user.image.to_s %>
                <div class = "media-body">
                    <div>
                         <%= link_to knowhow.pocket.user.name, user_path(knowhow.pocket.user) %>
                        <span class = "text-muted">posted at <%= knowhow.created_at %></span>
                    </div>
                    <div>
                        <%= link_to knowhow.title, knowhow_path(knowhow) %>
                    </div>
                    <div>
                          <%=render 'favorites/favorite_button', knowhow: knowhow %>
                    </div>
                </div>
            </li>
        </ul>
            <% end %>
        <% else %>
        
    <% @knowhows.each do |knowhow| %>

    <li class = "media mb-3">
        <%= image_tag knowhow.pocket.user.image.to_s %>
        <div class = "media-body">
            <div>
                <div>
                    
                    <%= knowhow.pocket.user.name %>
                     <span class = "text-muted">posted at <%= knowhow.created_at %></span>
                </div>
                <div>
                <%= link_to knowhow.title, knowhow_path(knowhow) %>
                </div>
            </div>
        </div>
    </li>
    <% end %>
    <% end %>
   
</ul>


         
     
