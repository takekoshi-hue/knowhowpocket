<% if logged_in? %>
<div class = "row">
    <aside class = "col-sm-4">
        <%= form_with(model: @knowhow, local: true) do |f| %>
        <div class = "form-group">
            <%= f.text_area :title, class: "form-control", rows: 5 %>
        </div>
        
        <div class = "form-group">
            <%= f.text_area :content, class: "form-control", rows: 5 %>
        </div>
        <%= hidden_field_tag :id, @pocket.id %>
        <%= f.submit "Post", class: "btn btn-primary btn-block" %>
        
        <%= link_to "ポケット一覧に戻る", pockets_user_path(current_user) %>
        <% end %>
    </aside>
    <div class = "col-sm-8">
        <%= render "knowhows/knowhows", knowhows: @knowhows %>
    </div>
</div>
<% end %>