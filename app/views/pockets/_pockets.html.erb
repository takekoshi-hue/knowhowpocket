<ul class = "list-unstyled">
    <p>ポケット一覧</p>
    <% pockets.each do |pocket| %>
    <li class = "media mb-3">
         
        <%= image_tag @user.image.to_s %>
        <div class = "media-body">
            <div>
                <%= link_to pocket.user.name, user_path(pocket.user) %>
                <span class= "text-muted">create at <%= pocket.created_at %></span>
            </div>
            <div>
                <p><%= link_to pocket.pocket_name, knowhows_pocket_path(pocket) %></p>
            </div>
            <div>
                <% if current_user == pocket.user %>
                <%= link_to "Delete", pocket, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger btn-sm" %>
                <%= link_to "Edit", edit_pocket_path(pocket),  class: "btn btn-primary btn-sm" %>
                <% end %>
            </div>
        </div>
    </li>
    <% end %>
    <%= paginate pockets %>
</ul>

