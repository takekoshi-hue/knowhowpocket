

<% if current_user.favoriting?(knowhow) %>

<%= form_with(model: current_user.favorites.find_by(knowhow_id: knowhow.id), 
 local: true, method: :delete) do |f| %>
 
 <%= hidden_field_tag :knowhow_id, knowhow.id %>
 
 <%= f.submit "ポケットをやめる", class: "btn btn-warning btn-sm" %>
 <% end %>
 
 <% else %>
 
 <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
 
 <%= hidden_field_tag :knowhow_id, knowhow.id %>
 
 <%= f.submit "ポケットする", class: "btn btn-primary btn-sm" %>
 
 
 <% end %>
 <% end %>
 