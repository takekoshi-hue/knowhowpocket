
<h1>ユーザー編集</h1>

<div class= "row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user do |f| %>
        
        
       
        <div>
        <%= image_tag @user.image.to_s %>
        </div>
        
        <% if current_user == @user %>
        <div>
       <%=f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div>
            <%= f.label :image %>
            <%= f.file_field :image %>
        </div>
        
        
        <%= f.submit "編集OK",　class: "btn btn-primary" %>
        <% end %>
        
        <% end %>
        
        
    </div>
</div>